<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingCategoryDef>
		<defName>Ammo40x46mmSMKGrenades</defName>
		<label>40x46mm Smoke Grenade</label>
		<parent>AmmoGrenades</parent>
    <iconPath>UI/Icons/ThingCategories/CaliberGrenade</iconPath>
	</ThingCategoryDef>
	
	<!-- ==================== AmmoSet ========================== -->

  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_40x46mmSMKGrenade</defName>
    <label>40x46mm Smoke Grenades</label>
    <ammoTypes>
      <Ammo_40x46mmGrenade_SMK>Bullet_40x46mmGrenade_SMK</Ammo_40x46mmGrenade_SMK>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
	
	<!-- ==================== Ammo ========================== -->

  <ThingDef Class="CombatExtended.AmmoDef" Name="40x46mmSMKGrenadeBase" ParentName="AmmoBase" Abstract="True">
    <description>Low velocity smoke grenade fired from handheld grenade launchers.</description>
    <statBases>
	  <Mass>0.3</Mass>
	  <Bulk>0.4</Bulk>
    </statBases>
	<tradeTags>
	  <li>CE_AutoEnableTrade</li>
	  <li>CE_AutoEnableCrafting_TableMachining</li>
	</tradeTags>
    <thingCategories>
      <li>Ammo40x46mmGrenades</li>
    </thingCategories>
    <stackLimit>75</stackLimit>
  </ThingDef>

  <ThingDef Class="CombatExtended.AmmoDef" ParentName="40x46mmGrenadeBase">
    <defName>Ammo_40x46mmGrenade_SMK</defName>
    <label>40x46mm smoke grenade</label>
    <graphicData>
      <texPath>Things/Ammo/GrenadeLauncher/HE</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>2.19</MarketValue>
    </statBases>
  </ThingDef>
	
	<!-- ================== Projectiles ================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="Base40x46mmGrenadeBullet" ParentName="BaseBullet" Abstract="true">
		<thingClass>CombatExtended.ProjectileCE_Explosive</thingClass>
		<graphicData>
			<texPath>Things/Projectile/Bullet_Big</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<speed>30</speed>
		</projectile>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="Base40x46mmGrenadeBullet">
		<defName>Bullet_40x46mmGrenade_SMK</defName>
		<label>40x46mm smoke grenade</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<explosionRadius>12</explosionRadius >
			<damageDef>Smoke</damageDef>
			<preExplosionSpawnThingDef>Gas_Smoke</preExplosionSpawnThingDef>
			<preExplosionSpawnChance>1</preExplosionSpawnChance>
		</projectile>
	</ThingDef>
  
	<!-- ==================== Recipes ========================== -->

  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_40x46mmGrenade_SMK</defName>
    <label>make 40x46mm smoke grenades x50</label>
    <description>Craft 50 40x46mm smoke grenades.</description>
    <jobString>Making 40x46mm smoke grenades.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>40</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentIndustrial</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>ComponentIndustrial</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_40x46mmGrenade_SMK>50</Ammo_40x46mmGrenade_SMK>
    </products>
  </RecipeDef>

	
</Defs>
